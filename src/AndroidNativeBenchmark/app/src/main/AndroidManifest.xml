<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rochapires.admin.androidnativebenchmark" >

    <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActivityAlgorithmPerformance"
            android:label="@string/title_activity_activity_algorithm_performance" >
        </activity>
        <activity
            android:name=".Activities.ActivityMemoryTest"
            android:label="@string/title_activity_activity_memory_test" >
        </activity>
        <activity
            android:name=".Activities.ActivityListVisualPerformance"
            android:label="@string/title_activity_activity_visual_performance" >
        </activity>
        <activity
            android:name=".Activities.ActivityControlsVisualPerformance"
            android:label="@string/title_activity_activity_visual_performance" >
        </activity>
        <activity
            android:name=".Activities.ActivityCameraAccess"
            android:label="@string/title_activity_activity_camera_access" >
        </activity>
    </application>

</manifest>
